<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_fare_activity"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text1"
        android:orientation="vertical" >

        <TableLayout android:id="@+id/tableFare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" >

            <TableRow
                android:id="@+id/rowBaseFare"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base Fare: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewBaseFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="12.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowWaitingTime"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting Time: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewTotalWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:textColor="#ffffff"
                    android:text="00:00:00"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowWaitingPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting Price: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewWaitingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:textColor="#ffffff"
                    android:text="0.00"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowTollPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toll Tax Amount: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewTollPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowParkingPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking Amount: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewParkingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowChallanPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challan Amount: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewChallanPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowTipPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tip Amount: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewTipPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowMislPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miscellaneous Amount: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewMislPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowTotalPrice"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />

                <TextView
                    android:id="@+id/textViewTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_row_margin"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_text_fare" />
            </TableRow>

            <TableRow
                android:id="@+id/rowPaymentMode"
                android:gravity="center_horizontal" >

                <RadioGroup
                    android:id="@+id/radioPaymentMode"
                    android:layout_span="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioCashMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="#ffffff"
                        android:button="@drawable/radio_button_theme"
                        android:text="Cash" />

                    <RadioButton
                        android:id="@+id/radioCreditCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:button="@drawable/radio_button_theme"
                        android:text="Credit Card" />
                </RadioGroup>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/buttonPaymentDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yellow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="OK"
            android:textStyle="bold"
            android:textSize="@dimen/dialog_text_fare" />
    </LinearLayout>

</ScrollView>