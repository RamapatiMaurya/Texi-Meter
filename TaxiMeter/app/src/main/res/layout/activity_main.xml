<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout_border"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonOnOffDuty"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/offduty" />

            <Button
                android:id="@+id/buttonExitExtracharges"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/exit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewVechical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" CAB = DL 4A1C-3212"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/textViewDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"                    
                    android:text="      Driver = Mr. XYZ"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:typeface="normal" />
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/jobContainer"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center_vertical|top"
                android:visibility="visible">
                <TextView 
                    android:id="@+id/textviewAvailablejobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#f00"
                    android:textSize="20dp"
                    android:text="Available Jobs"/>
                <ListView 
                    android:id="@+id/jobList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="vertical"/>
            </LinearLayout>

             <TextView
                    android:id="@+id/textViewWaitingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" 
                    android:gravity="right"                   
                    android:text="Waiting Time = 0:00:00"
                    android:textColor="#ffff00"
                    android:visibility="gone"
                    android:textSize="15dp"
                    android:typeface="normal" />

            <TextView
                android:id="@+id/textViewcharges"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="0.49"
                android:gravity="center_vertical|top"
                android:text="00000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:textSize="100dp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonMail"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/streetjob" />

            <Button
                android:id="@+id/buttonReport"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/report" />
        </LinearLayout>
    </LinearLayout>
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="5dp"
         android:orientation="horizontal" 
         android:padding="2dp">
        
         <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"              
              android:orientation="vertical">
        
          <LinearLayout
              android:layout_width="339dp"
              android:layout_height="wrap_content"
              android:id="@+id/linearlayoutRecord"
              android:background="@drawable/corner_radius"
              android:orientation="vertical" >
			
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >
                
              <TextView
                  android:id="@+id/textViewPrice"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Price = \u20B9 10/km"
                  android:textSize="17dp"
                  android:textColor="#FFFFFF"/> 
                   
                    <TextView
                      android:id="@+id/textViewFair"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"    
                      android:layout_marginLeft="@dimen/margin_text1"
                      android:text="Fare = Regular"
                      android:textColor="#FFFFFF"
                      android:textSize="17dp" />
              </LinearLayout>
            
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/textViewDistance"
                      android:layout_width="0dip"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Dist. = 0.0 km"
                      android:textColor="#FFFFFF"
                      android:textSize="17dp"/>

                 <TextView
                      android:id="@+id/textViewWaitig"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"    
                      android:layout_marginLeft="@dimen/margin_text1"                
                      android:text="Waiting =\u20B9 50/30 Min"
                      android:textColor="#FFFFFF"
                      android:textSize="17dp" />

              </LinearLayout>
              
              <TextView
                  android:id="@+id/textViewInitialCharges"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Initial Charges = \u20B9 100 (Up to 5km) "
                  android:textSize="17dp"
                  android:textColor="#FFFFFF"/>
              
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >
                
              <TextView
                  android:id="@+id/textViewTime"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Pick At = 00:00"
                  android:textSize="17dp"
                  android:padding="1dp" 
                  android:textColor="#FFFFFF"/> 
                   
                    <TextView
                      android:id="@+id/textViewMobile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"   
                      android:layout_marginLeft="@dimen/margin_text1" 
                      android:text="9876543210 "
                      android:textColor="#FFFFFF"
                      android:textSize="17dp" />
              </LinearLayout>
             
                <TextView
                    android:id="@+id/textViewPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pick Up ="
                    android:textColor="#FFFFFF"
                    android:padding="1dp"
                    android:textSize="17dp" />
      </LinearLayout>
                <TextView
                    android:id="@+id/textViewTechtonics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"    
                    android:textSize="16dp"      
                    android:textColor="#FFFFFF"                           
                    android:text=" &#169;2016 Aptara Inc." />

    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

         <Button
             android:id="@+id/buttonAcceptDuty"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"           
             android:background="@drawable/location" />
         
         <Button
             android:id="@+id/buttonGetDirection"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:background="@drawable/get_direction" />

         <Button
             android:id="@+id/buttonPrintBill"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:background="@drawable/print" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>